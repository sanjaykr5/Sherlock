<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000000"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.google.android.youtube.player.YouTubePlayerFragment"
            android:id="@+id/fragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="A study in Pink"
            android:textSize="35dp"
            android:background="#528881"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_below="@+id/fragment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="Duration"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/poster"
            android:layout_toRightOf="@+id/poster"
            android:layout_toEndOf="@+id/poster" />

        <TextView
            android:text="Genre"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster"
            android:layout_alignLeft="@+id/poster"
            android:layout_alignStart="@+id/poster"
            android:layout_marginTop="17dp"
            android:id="@+id/textView13" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/poster"
            android:layout_alignStart="@+id/poster"
            android:text="Top Cast "
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:id="@+id/topcast"
            android:layout_below="@+id/textView13"
            />
        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topcast"
            android:layout_alignStart="@+id/poster"
            android:layout_alignLeft="@+id/poster">
            <LinearLayout
                android:id="@+id/layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Plot"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:text="Plot"
            android:layout_alignStart="@+id/poster"
            android:layout_alignLeft="@+id/poster"
            android:layout_below="@+id/scroll"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plot"
            android:textColor="#ffffff"
            android:layout_alignStart="@+id/poster"
            android:layout_alignLeft="@+id/poster"
            android:layout_below="@+id/Plot"
            android:textSize="20dp"/>
        <TextView
            android:text="TextView"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/votes"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/rating"
            android:layout_alignLeft="@+id/rating"
            android:layout_alignStart="@+id/rating" />

        <TextView
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/s1"
            android:layout_marginTop="18dp"
            android:id="@+id/poster"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Votes"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/votes"
            android:layout_toLeftOf="@+id/duration"
            android:layout_toStartOf="@+id/duration" />
        <TextView
            android:textSize="20dp"
            android:text="dddjjjjjjjjjjjjjj"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genre"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@android:drawable/btn_star_big_off"

            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:text="TextView"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/duration"
            android:layout_alignStart="@+id/duration" />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="wrap_content"
            android:layout_below="@id/plot"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/votes"
            android:layout_alignStart="@+id/votes"
            android:id="@+id/next" />

        <ImageButton
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plot"
            android:layout_toRightOf="@+id/plot"
            android:layout_toEndOf="@+id/plot"
            android:id="@+id/previous" />

    </RelativeLayout>
</ScrollView>